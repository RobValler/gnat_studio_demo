project Greetings is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";

   package Compiler is
      for Ada_Compiler_Options ("Debug") use ("-g");
      for C_Compiler_Options ("Debug") use ("-g");
   end Compiler;

   -- Define the main Ada executable
   executable My_Executable is
      for Source_Dirs use ("src");
      for Object_Dir use "obj";
      for Exec_Dir use "bin";
      for Main use ("main.adb");
   end My_Executable;

end Greetings;
